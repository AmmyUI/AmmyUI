<Window x:Class="AmmySEA.MainWindow" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:ns0="clr-namespace:AmmySEA.Views" xmlns:ns1="clr-namespace:AmmySidekick;assembly=AmmySidekick" Title="Ammy's StackExchange aggregator" ns1:Ammy.Register="/AmmySEA;component/MainWindow.g.xaml">
  <Grid>
    <TabControl Margin="0, 12, 0, 0">
      <TabItem>
        <TabItem.Header>
          <TextBlock Text="Questions" FontSize="16" Foreground="#606060"/>
        </TabItem.Header>
        <ns0:QuestionBlockListView>
          <FrameworkElement.DataContext>
            <Binding Path="QuestionBlockList"/>
          </FrameworkElement.DataContext>
        </ns0:QuestionBlockListView>
      </TabItem>
      <TabItem>
        <TabItem.Header>
          <TextBlock Text="Settings" FontSize="16" Foreground="#606060"/>
        </TabItem.Header>
        <ns0:OptionsView>
          <FrameworkElement.DataContext>
            <Binding Path="Options"/>
          </FrameworkElement.DataContext>
        </ns0:OptionsView>
      </TabItem>
    </TabControl>
  </Grid>
</Window>